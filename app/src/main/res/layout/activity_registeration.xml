<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgedt"
    android:orientation="vertical">

    <TextView
        android:id="@+id/loginscrn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="consolas"
        android:gravity="center"
        android:text="Registration"
        android:textSize="40sp"
        android:textStyle="bold"
        app:fontFamily="@font/alegreya_sans_sc_bold" />

    <EditText
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:background="@drawable/txt"
        android:layout_gravity="center"
        android:hint="First Name" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:layout_marginTop="@dimen/xmargin"
            android:background="@drawable/txt"
            android:hint="Last Name" />

        <AutoCompleteTextView
            android:id="@+id/branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:layout_marginTop="@dimen/xmargin"
            android:background="@drawable/txt"
            android:hint="Branch" />


    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/txt"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/xmargin"
        android:paddingLeft="20dp"
        android:inputType="textEmailAddress"
        android:hint="Email" />

    <EditText
        android:id="@+id/txtPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/xmargin"
        android:background="@drawable/txt"
        android:paddingLeft="20dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/Rollno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xmargin"
        android:background="@drawable/txt"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:inputType="text"
        android:hint="Roll-No" />


    <EditText
        android:id="@+id/contactno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xmargin"
        android:inputType="number"
        android:background="@drawable/txt"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:hint="@string/contactno" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/cityreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_weight=".5"
            android:paddingLeft="20dp"
            android:layout_marginTop="@dimen/xmargin"
            android:background="@drawable/txt"
            android:hint="City" />

        <EditText
            android:id="@+id/pinc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="62dp"
            android:layout_weight=".5"
            android:paddingLeft="20dp"
            android:inputType="number"
            android:layout_marginTop="@dimen/xmargin"
            android:background="@drawable/txt"
            android:hint="Pincode" />

    </LinearLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="@dimen/xmargin"
        android:layout_marginRight="62dp"
        android:width="350dp"
        android:background="@drawable/txt"
        android:hint="Date of Birth"
        android:paddingTop="6dp"
        android:textSize="18sp"
        android:paddingLeft="20dp" />

    <ImageView
        android:id="@+id/calendericon"
        android:layout_width="47dp"
        android:layout_height="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/ic_date_range_black_24dp" />

</RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/radiosex"
    android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:layout_marginLeft="62dp"
            android:gravity="center"
            android:layout_weight=".5"
            android:paddingLeft="2dp"
            android:layout_marginTop="@dimen/xmargin"
            android:text="Male" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/female"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="62dp"
            android:layout_weight=".5"
            android:width="300dp"
            android:paddingLeft="2dp"
            android:layout_marginTop="@dimen/xmargin"
            android:text="Female" />
</RadioGroup>
    </LinearLayout>



    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:onClick="Registeruser"
        android:layout_gravity="center"
        android:background="@drawable/btn"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:text="Register" />

    <TextView
        android:id="@+id/lnkLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:onClick="gotologin"
        android:text="Already Registered? Login here"
        android:textColor="#3F51B5"
        android:textSize="20dp" />



</LinearLayout>